        </div>

        <div id="nav" class="navBarre mobile">
            <div id="note1" class="touche aBlanc">
                <a href="{{ path('home') }}"><i class="fas fa-home"></i></a>

            </div>
            <div id="note2" class="touche aNoir">
                
                <a href="{{ path('contact_index') }}"><i class="fas fa-envelope-open-text"></i></a>

            </div>
            <div id="note3" class="touche aBlanc">
                <a href=""></a>

            </div>
            <div id="note4" class="touche aNoir">
                <a href=""></a>

            </div>
