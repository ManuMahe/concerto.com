                <a href=""></a>

            </div>
            <div id="note6" class="touche aNoir">
                <a href=""></a>                

            </div>
            <div id="note7" class="touche aBlanc">
                {% if app.user %}
                <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i></a>
                {% else %}
                <a href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i></a>
                {% endif %}

            </div>
            <div id="note8" class="touche aNoir">
                {% if app.user %}
                <a href="{{ path('produit_index') }}"><i class="fas fa-cogs"></i></a>
                {% else %}
                <a href="{{ path('app_register') }}"><i class="fas fa-user-plus"></i></a>
                {% endif %}

            </div>

        </div>
    </header>


        <!-- Test navbar verticale -->
        {% set route_name = app.request.attributes.get('_route') %}
        <nav class="navTest hidden" id="navTest">
            <a {% if route_name matches '{^home}' %} class="bouton active" {% else %} class="bouton" {% endif %} href="{{ path('home') }}"><i class="fas fa-home"></i></a>
            <a {% if route_name matches '{^contact}' %} class="bouton active" {% else %} class="bouton" {% endif %} href="{{ path('contact_index') }}"><i class="fas fa-envelope-open-text"></i></a>
            {% if app.user %}
                <a {% if route_name == "app_logout" %} class="bouton active" {% else %} class="bouton" {% endif %} href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i></a>
            {% else %}
                <a {% if route_name == "app_login" %} class="bouton active" {% else %} class="bouton" {% endif %} href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i></a>
            {% endif %}

            {% if app.user %}
                <a {% if route_name matches '{^produit}' %} class="bouton active" {% else %} class="bouton" {% endif %} href="{{ path('produit_index') }}"><i class="fas fa-cogs"></i></a>
            {% else %}
                <a {% if route_name == "app_register" %} class="bouton active" {% else %} class="bouton" {% endif %} href="{{ path('app_register') }}"><i class="fas fa-user-plus"></i></a>
            {% endif %}
        </nav>


        <div class="pont hiddenPont">
