        <h4>{{ produit.nomProduit }}</h4>
        <img src="{{ asset('uploads/photos/' ~ produit.photoProduit) }}" alt="photo {{ produit.nomProduit }}">
        <h5>A partir de {{ produit.prixProduit }} â‚¬</h5>
        <h6>{{ produit.stockProduit }} produit(s) en stock</h6>
        <p>{{ produit.descriptionProduit }}</p>

    </div>


    {% endfor %}
</div>
{% endblock %}