{% extends 'base.html.twig' %}

{% block title %}Concerto.com - S'enregistrer{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h2>S'enregistrer</h2>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nomUser, {'label': 'Votre Nom'}) }}
        {{ form_row(registrationForm.email, {'label': 'Votre Courriel'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Votre Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {'label': 'Accepter les conditions générales'}) }}

        <button type="submit" class="btn">Envoyer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
